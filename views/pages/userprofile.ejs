<%- include('../partials/head', {title:"Profile", css:"../../profile_page.css"}) -%>
<header class="d-flex justify-content-between align-items-center mt-4">
    <%- include('../partials/index/profile-header') -%>
</header>

<body class="background-image">
    <div class="container mt-4">
        <div class="row">
            <!--User Information Card-->
            <div
                class="profile-information-container card col-4 mx-4 my-4 shadow mb-5 bg-white rounded position-sticky p-0">
                <div class="card-body p-0">

                    <div class="profile-image-container">
                        <img class="img-fluid profile-image w-100 rounded "
                            src="https://images.unsplash.com/photo-1539418561314-565804e349c0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80">

                    </div>
                    <div class="profile-information-text p-3">
                        <h3 class="username">@ <%= username %></h3>
                        <p>
                            <h4>About:</h4>
                            <p class="text-justify">Lorem ipsum dolor sit amet consectetur adipisicing elit. Placeat ad
                                odio doloremque fugit porro sit commodi iusto quae excepturi, aut maiores saepe ipsum
                                consequatur delectus similique impedit exercitationem ipsam odit. Lorem ipsum dolor, sit
                                amet consectetur adipisicing elit. Reprehenderit minima tenetur expedita? Totam
                                repudiandae voluptas!</p>
                        </p>
                        <h4 class="info-text">Email: </h4>
                        <p><%= email %></p>
                        <h4 class="info-text">Last Active: </h4>
                        <p>8 Hours Ago</p>
                        <h4 class="info-text">User Rating: </h4>
                        <%- include("../partials/listings/rating", {average_rating:average_rating, total_rating:total_rating}) -%>
                        <h4><% if (is_verified == 0) {%> <p class="text-success mt-2">Verified User</p>
                            <%} else { %> <p class="text-danger mt-2">Unverified
                                User</p>
                            <%} %></h4>
                        <div class="button-container d-flex flex-row bd-highlight mb-3 mt-4 justify-content-between">
                            <div class="message-button">
                                <button type="button" class="btn btn-info">Message User</button>
                            </div>
                            <div class="setting-button">
                                <button type="button" class="btn btn-secondary">Account Settings</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end-->

            <div class="col container">
                <% if(show_personal_listings) {%>
                    <%- include('../partials/profile/mylistings') -%>
                    
                <% } else { %>
                    <%- include('../partials/profile/reviews') -%>
                <% } %>
            </div>
        </div>
    </div>
    




    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>

    <%- include('../partials/script', {javascript:"../../index.js"}) -%>
</body>

</html>