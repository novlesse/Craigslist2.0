<!-- Transaction went through toast -->
<a href="/transaction">
    <div class="toast" style="position: absolute; bottom: 3rem; right: 3rem;" data-autohide="false">
      <div class="toast-header">
        <strong class="mr-auto text-primary"><%= title %> Request Approved</strong>
        <small class="text-muted">5 mins ago</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
      </div>
      <div class="toast-body">
          Your request has been approved by <%= seller %>
      </div>
    </div>
  </a>
